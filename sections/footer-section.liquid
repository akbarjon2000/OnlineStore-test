  <footer class="footer-section bg-light py-5 mt-5">
    <div class="container p-4">
        <div class="row row-cols-1 row-cols-md-4">
            {% for block in section.blocks %}
                {% assign item = block.settings %}
                {% if block.type == "link_list" %}
                    <div class="col">
                        <h5>{{item.title}}</h5>
                        {% assign footer_linklist = item.menu %}
                        <ul class="list-unstyled text-small">
                            {% for link in linklists[footer_linklist].links %}
                            <li>
                                <a href="{{link.url}}">{{link.title | escape}}</a>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% else if block.type == "text" %}
                    <div class="col">
                        <img src="{{item.logo | img_url :"medium"}}" class="mb-5"/>
                        <h5>{{item.title}}</h5>
                        <p>{{item.description}}</p>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
    {% if section.settings.payment_methods == true %}
        <div class="container justify-content-center d-flex">
            {% for payment_type in shop.enabled_payment_types %}
                <img style="margin-right:5px;" src="{{payment_type | payment_type_img_url }}" />
            {% endfor %}
        </div>
    {% else %}
    <div class="container justify-content-center d-flex text-center">
        <p style="color:#e09f3e;" class="w-75">You can display payment methods in the settings</p>        
    </div>
    {% endif %}
  </footer>
  
  {{ 'bootstrap.min.js' | asset_url | script_tag }}
  {{ 'application.js' | asset_url | script_tag }}

  {% schema %}
  {
   "name": "Footer",
  "settings": [
    {
       "type": "checkbox",
       "id":"payment_methods",
       "label":"Show Payment Methods",
      "default": false
    }
  ],
    "blocks": [
        {
           "type": "link_list",
          "name": "Navigation",
         "settings": [
            {
               "type": "text",
               "id": "title",
               "label":"Title",
               "default":"Quick links"
            },
            {
               "type": "link_list",
               "id": "menu",
               "label":"Menu"
        
            }
         ]
        },
        {
           "type": "text",
          "name": "Store Details",
         "settings": [
            {
               "type": "image_picker",
               "id": "logo",
               "label":"Store Logo"
            },
            {
               "type": "text",
               "id": "title",
               "label":"Heading",
              "default": "Store Information"
        
            },
            {
               "type": "richtext",
               "id":"description",
               "label":"text"
            }
         ]
        }
   ]
  }
  {% endschema %}