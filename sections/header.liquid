<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav me-auto position-relative w-100">
        {% for link in linklists.main-menu.links %}
    {% assign child_list_handle = link.title | handleize %}
    {% if linklists[child_list_handle].links != blank %}
      <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
      [{% for childlink in linklists[child_list_handle].links %}
        <a class="nav-link" href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
      {% endfor %}]
    {% else %}
      <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
    {% endif %}
  {% endfor %}
    <a class="nav-link" href="/cart">My Cart</a>
    <form action="/search" method="GET" role="search" style="position: absolute; right:50px;">
      <input type="text" value="{{search.terms |escape}}" name="q"/>
      <button type="submit">Search</button>
    </form>
    <ul class="navbar-nav">
      {% if shop.customer_accounts_enabled %}
      {% if customer %}
      <li class="nav-item">
           <a href="{{routes.account_url}}" class="nav-link">{{'general.Layout.account' | t}}</a> 
      </li>
      <li class="nav-item">
           <a href="{{routes.account_logout_url}}" class="nav-link">{{'general.Layout.logout' | t}}</a> 
      </li>
      {% else %}
        <li class="nav-item">
           <a href="{{routes.account_login_url}}" class="nav-link">{{'general.Layout.login' | t}}</a> 
        </li>    
        <li class="nav-item">
           <a href="{{routes.account_register_url}}" class="nav-link">{{'general.Layout.register' | t}}</a> 
        </li>   
      {% endif %}
            {% endif %}
        </ul>
      </div>
    </div>
  </div>
</nav>
