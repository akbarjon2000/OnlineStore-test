{
   "name": "Page settings",
    "settings": [
    {
       "type": "select",
       "id": "container",
       "label" :"Layout",
       "options":
            [
                {
                    "value": "container",
                    "label": "Container"
                },
                {
                    "value": "container-fluid",
                    "label": "Container-fluid"
                }
            ]
    }
  ],
  "blocks":[
    {
       "type": "page_title",
      "name": "Title",
      "limit":1
    },
    {
       "type": "page_date",
      "name": "Date",
      "limit":1
    },
    {
       "type": "page_content",
      "name": "Content",
      "limit":1
    }
  ]
}
