<div class="container">
    <h3 class="text-center m-3">FAQs</h3>
    <div class="accordion accordion-flush" id="accordionFAQ">
        {% for block in section.blocks %}
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button 
                    class="accordion-button collapsed"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapse-{{block.id}}"
                    aria-expanded="false"
                    aria-controls="{{block.id}}"
                    >
                        {{block.settings.title}}
                    </button>
                </h2>
                <div 
                class="accordion-collaps collapse p"
                id="collapse-{{block.id}}"
                aria-labelledby="collapse-header-{{block.id}}"
                data-bs-parent="#accordionFAQ"
                >
                    <p class="p-1">{{block.settings.answer}}</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>


{% schema %}
{
   "name": "FAQ",
  "blocks": [
    {
        "name": "FAQ items",
        "type": "faq",
        "settings":[
            {
               "type": "text",
               "id":"title",
               "label":"Title",
               "default":"FAQ title example"
            },
            {
               "type": "richtext",
               "id":"answer",
               "label":"Answer"
            }
        ]
    }
  ]
}
{% endschema %}